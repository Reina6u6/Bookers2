
<h1>User info</h1>
<%= image_tag @user.get_profile_image %>

 <h4>名前</h4>
 <%= @user.name %>
 <h4>自己紹介文</h4>
 <%= @user.introduction %>

 <%= link_to 'edit', edit_user_path(@user) %>



 <h1>New book</h1>

 <%= form_with model: @books do |f| %>
 <h4>本のタイトル</h4>
 <%= f.text_field :title %>

 <h4>感想</h4>
 <%= f.text_area :body %>

 <%= f.submit 'create Book' %>
 <% end %>




<h1>Book detail</h1>
<%= image_tag @book.user.get_profile_image %>
<p>本のタイトル：<%= link_to @book.title, book_path(@book)%></p>
<p>感想：<%= @book.body %></p>
<p>ユーザーネーム：<%= link_to @book.user.name, user_path(@book.user) %></p>

<%= link_to 'edit', edit_book_path(@book) %>
<%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>




