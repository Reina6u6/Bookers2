

<%= image_tag @user.get_profile_image %>

 <h4>名前</h4>
 <%= @user.name %>
 <h4>自己紹介文</h4>
 <%= @user.introduction %>

 <%= link_to 'edit', edit_user_path(@user) %>



 <h1>New book</h1>

 <%= form_with model: @book, method: :post do |f| %>
 <h4>本のタイトル</h4>
 <%= f.text_field :title %>

 <h4>感想</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
 <% end %>

 <h1>Users</h1>
 <% @users.each do |user| %>
 <h4>画像</h4>
  <%= user.name %>
 <h4>名前</h4>
  <%= user.name %>
 <%= image_tag user.get_profile_image %>
  <%= link_to 'Show', user_path(@user) %>
 <% end %>

